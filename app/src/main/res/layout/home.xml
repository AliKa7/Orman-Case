<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4FB">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="@string/find_box_label"
        android:textColor="@color/main_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072" />

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="304dp"
        android:background="@drawable/back"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.935">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_bold"
            android:text="@string/groupbox_label"
            android:textColor="@color/main_white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toCaseButton"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_corners_10_stl"
            android:backgroundTint="@color/soft_color"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/groupbox_item1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/main_color"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toCallSOSButton"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_corners_10_stl"
            android:backgroundTint="@color/soft_color"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/groupbox_item2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/main_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/toAddnInfoButton"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_corners_10_stl"
            android:backgroundTint="@color/soft_color"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/groupbox_item3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/main_color"
            android:visibility="visible" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="169dp"
        android:layout_height="160dp"
        android:contentDescription="Just an image"
        android:background="@drawable/animated_box_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.257" />


</androidx.constraintlayout.widget.ConstraintLayout>