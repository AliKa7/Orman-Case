<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OrmanCase" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/main_color</item>
    </style>

    <style name="Theme.OrmanCase" parent="Base.Theme.OrmanCase">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="titleTextColor">@color/main_white</item>
        <item name="titleTextAppearance">@font/ubuntu_bold</item>
        <item name="statusBarBackground">@color/main_color</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:titleTextColor">@color/white</item> <!-- Title color -->
        <item name="titleTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item><!-- Menu item text color -->
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="background">@color/main_color</item>
        <item name="android:itemBackground">@color/black</item> <!-- Set the background color for menu items -->
    </style>
    <style name="roundImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="color">@color/main_white</item>
    </style>
</resources>